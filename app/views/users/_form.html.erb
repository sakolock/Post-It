<div class="well">
  <%= form_for @user do |f| %>
  <%= render 'shared/errors', obj: @user %>
  <div class='control-group'>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class='control-group'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class='control-group'>
    <%= f.label :phone %>
    <%= f.phone_field :phone, autocomplete: 'on' %>
  </div>
  <div class='control-group'>
    <%= f.label :time_zone %>
    <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
  </div>
  <%= f.submit @user.new_record? ? 'Register' : 'Update', class: 'btn btn-success' %>
  <% end %>
</div>
